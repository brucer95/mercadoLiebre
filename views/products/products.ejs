<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include ('../partials/head') %>
		<link href="/css/styles.css" rel="stylesheet" />
		<link href="/css/products.css" rel="stylesheet" />
	</head>
	<header><%- include ('../partials/header') %></header>
	<body>
		<div id="wrap">
			<div id="columns" class="columns_4">
				<% productos.forEach(producto => { %>
				<figure>
					<a href="/products/<%= producto.id %>/productDetail/">
						<img src="<%= producto.imageUrl %>" />
					</a>
					<figcaption><%= producto.name %></figcaption>
					<span class="price"><%= producto.description %></span>
					<br />
					<br />
					<span class="price"><h2>$ <%= producto.price %></h2></span>
					<a class="button" href="#">Ver Mas</a>
				</figure>
				<% }); %>
			</div>
		</div>
	</body>
	<footer><%- include ('../partials/footer') %></footer>
	<script
		src="https://kit.fontawesome.com/4fed1f4ea0.js"
		crossorigin="anonymous"
	></script>
</html>
