<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include ('../partials/head') %>
		<link href="/css/styles.css" rel="stylesheet" />
	</head>
	<body>
		<%- include ('../partials/header') %>
		<main>
			<img
				class="banner"
				src="/images/img-home-banner.jpg"
				alt="banner-home"
			/>
			<h3 class="visita">Basado en tu ultima visita</h3>

			<section class="products">
				<% productos.forEach(producto => { %>
				<div class="product">
					<div class="items-caja">
						<img
							src="<%= producto.imageUrl %>"
							alt="cafetera"
							width="200"
							height="150"
						/>
						<div class="icono-imagen">
							<i class="fa-solid fa-truck"></i>
						</div>
						<div class="precios-off">
							<div id="precios">$ <%= producto.price %></div>
							<div class="off">%<%= producto.off %></div>
						</div>

						<div class="descripcion">
							<%= producto.description %>
						</div>
					</div>
				</div>
				<% }); %>
			</section>
		</main>

		<%- include ('../partials/footer') %>

		<script
			src="https://kit.fontawesome.com/4fed1f4ea0.js"
			crossorigin="anonymous"
		></script>
	</body>
</html>
